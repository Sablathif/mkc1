{
  "name": "playwebsite",
  "description": "PLAY! Summit and PLAY! SHOP websites",
  "version": "1.0.0",
  "private": true,
  "config": {
    "appName": "playwebsite",
    "rootPlaceholders": [
      "headless-header",
      "headless-main",
      "headless-footer"
    ],
    "sitecoreConfigPath": "/App_Config/Include/zzz",
    "graphQLEndpointPath": "/sitecore/api/graph/edge",
    "language": "en",
    "templates": [
      "nextjs",
      "nextjs-sxa",
      "nextjs-personalize"
    ]
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "author": {
    "name": "Sitecore Demo Solutions Team",
    "url": "https://www.sitecore.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sitecore/Sitecore.Demo.XmCloud.PlaySummit.git"
  },
  "bugs": {
    "url": "https://github.com/Sitecore/Sitecore.Demo.XmCloud.PlaySummit/issues"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@apollo/client": "^3.7.15",
    "@auth0/nextjs-auth0": "^1.7.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "@next/bundle-analyzer": "^12.2.4",
    "@sitecore-feaas/clientside": "^0.0.9",
    "@sitecore-jss/sitecore-jss-nextjs": "^21.0.0",
    "@tanstack/react-query": "^4.13.0",
    "auth0": "^3.4.0",
    "graphql-ws": "^5.13.1",
    "next": "^12.3.4",
    "next-localization": "^0.12.0",
    "react": "^18.1.0",
    "react-awesome-reveal": "^4.2.3",
    "react-dom": "^18.1.0",
    "react-owl-carousel": "^2.3.3",
    "react-slick": "^0.29.0",
    "slick-carousel": "^1.8.1"
  },
  "devDependencies": {
    "@sitecore-jss/sitecore-jss-cli": "^21.0.0",
    "@types/auth0": "^2.34.18",
    "@types/node": "^14.6.4",
    "@types/react": "^18.0.12",
    "@types/react-slick": "^0.23.10",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "@zeit/next-css": "^1.0.1",
    "autoprefixer": "^10.4.2",
    "chalk": "~2.4.2",
    "chokidar": "~3.1.1",
    "constant-case": "^3.0.4",
    "cross-env": "~6.0.3",
    "eslint": "^7.32.0",
    "eslint-config-next": "^12.2.5",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-yaml": "^0.2.0",
    "next-purgecss": "^3.1.2",
    "npm-run-all": "~4.1.5",
    "optimize-plugin": "^1.3.1",
    "postcss": "^8.4.8",
    "prettier": "^2.1.2",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "tailwindcss": "^3.0.23",
    "ts-node": "^9.0.0",
    "typescript": "~4.5.4"
  },
  "scripts": {
    "eslint": "eslint ./src/**/*.tsx ./src/**/*.ts ./scripts/**/*.ts",
    "stylelint": "stylelint ./src/**/*.css",
    "build:local": "cross-env NEXT_PUBLIC_DISCOVER_CUSTOMER_KEY=0-0 NEXT_PUBLIC_DISCOVER_API_KEY=0-0-0 NEXT_PUBLIC_ORDERCLOUD_BUYER_CLIENT_ID=00000000-0000-0000-0000-000000000000 NEXT_PUBLIC_ORDERCLOUD_BASE_API_URL=https://sandboxapi.ordercloud.io npm-run-all build",
    "analyze": "npm-run-all --serial bootstrap analyze:build",
    "analyze:build": "cross-env ANALYZE=true next build",
    "jss": "jss",
    "lint": "npm-run-all --serial eslint stylelint",
    "bootstrap": "ts-node --project tsconfig.scripts.json scripts/bootstrap.ts",
    "build": "npm-run-all --serial bootstrap next:build",
    "graphql:update": "ts-node --project tsconfig.scripts.json ./scripts/fetch-graphql-introspection-data.ts",
    "next:build": "next build",
    "next:dev": "cross-env NODE_OPTIONS='--inspect' next dev",
    "next:start": "next start",
    "scaffold": "ts-node --project tsconfig.scripts.json scripts/scaffold-component.ts",
    "start:connected": "npm-run-all --serial bootstrap --parallel next:dev start:watch-components",
    "start:production": "npm-run-all --serial bootstrap next:build next:start",
    "start:watch-components": "ts-node --project tsconfig.scripts.json scripts/generate-component-factory.ts --watch"
  }
}
